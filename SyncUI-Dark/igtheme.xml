<ImageGlass>
    <Theme>
        <Info
            name="Default Dark"
            version="1.1"
            author="mdapm9di"
            email="mdapm9di@gmail.com"
            website="https://github.com/mdapm9di/DarkUI-ImageGlass"
            description="Dark-UI is a theme for the ImageGlass 9.0, 8.2+ application with dark color accents and Google icons"
            type="ImageGlass Theme Configuration"
            preview="Preview.jpg"
        />
        <main
            accentcolor="#404040"
            accentdarkcolor="#1E1E1E"
            accentlightcolor="#4D4D4D"
            backcolor="#121212"
            bottombar=""                    
            bottombarcolor="#121212"
            isshowtitlebarlogo="true"       
            logo="Logo.svg"
            menubackgroundcolor="#121212"   
            menubackgroundhovercolor="#2D2D2D"
            menutextcolor="#F0F0F0"
            menutexthovercolor="#FFFFFF"
            statuscolor="#E6E6E6"
            topbar="example.svg.png"        
            topbarcolor="#1E1E1E"
            isdarkmode="True"
        />
        <toolbar_icon
			autosizewindow="WindowFit.svg"
            autozoom="AutoZoom.svg"
            back="ViewPreviousImage.svg"
            checkerboard="Checkerboard.svg"
            colorpicker="ColorPicker.svg"
            convert="Save.svg"
            crop="Crop.svg"
            delete="Delete.svg"
            edit="Edit.svg"
            fliphorz="FlipHorz.svg"
            flipvert="FlipVert.svg"
            fullscreen="FullScreen.svg"
            gofirst="ViewFirstImage.svg"
            golast="ViewLastImage.svg"
            gotoimage="GoToImage.svg"
            leftrotate="RotateLeft.svg"
            menu="MainMenu.svg"
            next="ViewNextImage.svg"
            open="OpenFile.svg"
            print="Print.svg"
            refresh="Refresh.svg"
            rightrotate="RotateRight.svg"
            scaletofill="ScaleToFill.svg"
            scaletofit="ActualSize.svg"
            scaletoheight="ScaleToHeight.svg"
            scaletowidth="ScaleToWidth.svg"
            slideshow="Slideshow.svg"
            thumbnail="Gallery.svg"
            zoomin="ZoomIn.svg"
            zoomlock="LockZoom.svg"
            zoomout="ZoomOut.svg"
            zoomtofit="ScaleToFit.svg"
        />
    </Theme>
</ImageGlass>
