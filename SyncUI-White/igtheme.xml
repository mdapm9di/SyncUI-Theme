<ImageGlass>
    <Theme>
        <Info
            name="SyncUI-White"
            version="1.0.0"
            author="mdapm9di"
            email="mdapm9di@gmail.com"
            website="https://github.com/mdapm9di/SyncUI-Theme"
            description="SyncUI-Theme is a light and dark theme for ImageGlass 9.0, 8.2+ with Google-style accents and minimalist icons."
            type="ImageGlass Theme Configuration"
            preview="Preview.jpg"
        />
        <main
            accentcolor="#616161"
            accentdarkcolor="#424242"
            accentlightcolor="#E0E0E0"
            backcolor="#FFFFFF"
            bottombar=""
            bottombarcolor="#F5F5F5"
            isshowtitlebarlogo="true"
            logo="Logo.svg"
            menubackgroundcolor="#FFFFFF"
            menubackgroundhovercolor="#F5F5F5"
            menutextcolor="#212121"
            menutexthovercolor="#212121"
            statuscolor="#757575"
            topbar="example.svg.png"
            topbarcolor="#F5F5F5"
            isdarkmode="False"
        />
        <toolbar_icon
			autosizewindow="WindowFit.svg"
            autozoom="AutoZoom.svg"
            back="ViewPreviousImage.svg"
            checkerboard="Checkerboard.svg"
            colorpicker="ColorPicker.svg"
            convert="Save.svg"
            crop="Crop.svg"
            delete="Delete.svg"
            edit="Edit.svg"
            fliphorz="FlipHorz.svg"
            flipvert="FlipVert.svg"
            fullscreen="FullScreen.svg"
            gofirst="ViewFirstImage.svg"
            golast="ViewLastImage.svg"
            gotoimage="GoToImage.svg"
            leftrotate="RotateLeft.svg"
            menu="MainMenu.svg"
            next="ViewNextImage.svg"
            open="OpenFile.svg"
            print="Print.svg"
            refresh="Refresh.svg"
            rightrotate="RotateRight.svg"
            scaletofill="ScaleToFill.svg"
            scaletofit="ActualSize.svg"
            scaletoheight="ScaleToHeight.svg"
            scaletowidth="ScaleToWidth.svg"
            slideshow="Slideshow.svg"
            thumbnail="Gallery.svg"
            zoomin="ZoomIn.svg"
            zoomlock="LockZoom.svg"
            zoomout="ZoomOut.svg"
            zoomtofit="ScaleToFit.svg"
        />
    </Theme>
</ImageGlass>
